@page "/"

@if (TodoItems != null && TodoItems.Any())
{
    @foreach (var item in TodoItems)
    {
        <p>@item.Name</p>
    }
}

<div class="container m-5 p-2 rounded mx-auto bg-secondary shadow">
    <!-- App title section -->
    <div class="row m-1 p-4">
        <div class="col">
            <div class="p-1 h1 text-dark text-center mx-auto display-inline-block">
                <i class="fa fa-check bg-dark text-white rounded p-2"></i>
                <u>My ToDoo's</u>
            </div>
        </div>
    </div>
    <!-- Add todo section -->
    <div class="row m-1 p-3">
        <div class="col col-11 mx-auto">
            <div class="row bg-white rounded shadow-sm p-2 add-todo-wrapper align-items-center justify-content-center">
                <div class="col">
                    <input class="form-control form-control-lg border-0 add-todo-input bg-transparent rounded" type="text" placeholder="Add new .." @bind-value="TodoItem.Name">
                </div>
                <div class="col-auto px-0 mx-0 mr-2">
                    <button class="btn btn-dark" @onclick="(() => CreateTodo(TodoItem.Name))">Add</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Todo List Exemple -->
    <div class="row mx-1 px-5 pb-3 w-80">
        <div class="col mx-auto">
            <!-- Todo Item 1 -->
            <div class="row px-3 align-items-center todo-item rounded">
                <div class="col-auto m-1 p-0 d-flex align-items-center">

                    <label class="label--checkbox">
                        <input type="checkbox" class="checkbox">
                    </label>

                </div>
                <div class="col px-1 m-1 d-flex align-items-center">
                    <input type="text" class="form-control form-control-lg border-0 text-light edit-todo-input bg-transparent rounded px-3" readonly value="Feed Fish" title="Feed Fish" />
                    <input type="text" class="form-control form-control-lg border-0 edit-todo-input rounded px-3 d-none" value="Feed Fish" />
                </div>
                <div class="col-auto m-1 p-0 px-3 d-none">
                </div>
            </div>

            <!-- Todo Item 2 -->
            <div class="row px-3 align-items-center todo-item rounded">
                <div class="col-auto m-1 p-0 d-flex align-items-center">

                    <label class="label--checkbox">
                        <input type="checkbox" class="checkbox">
                    </label>

                </div>
                <div class="col px-1 m-1 d-flex align-items-center">
                    <input type="text" class="form-control form-control-lg border-0 text-light edit-todo-input bg-transparent rounded px-3" readonly value="Wash Car" title="Wash Car" />
                    <input type="text" class="form-control form-control-lg border-0 edit-todo-input rounded px-3 d-none" value="Wash Car" />
                </div>
            </div>
            <!-- Todo Item 3 -->
            <div class="row px-3 align-items-center todo-item rounded">
                <div class="col-auto m-1 p-0 d-flex align-items-center">

                    <label class="label--checkbox">
                        <input type="checkbox" class="checkbox">
                    </label>

                </div>
                <div class="col px-1 m-1 d-flex align-items-center">
                    <input type="text" class="form-control form-control-lg text-light border-0 edit-todo-input bg-transparent rounded px-3" readonly value="Buy Milk" title="Buy Milk" />
                    <input type="text" class="form-control form-control-lg border-0 edit-todo-input rounded px-3 d-none" value="Buy Milk" />
                </div>
            </div>
        </div>
    </div>
</div>
